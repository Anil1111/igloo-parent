<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>fr.openwide.core</groupId>
	<artifactId>owsi-core</artifactId>
	<version>0.7.4-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<name>OWSI Core</name>
	<description>Capitalisation pour diverses technologies couramment utilis√©es sur les projets OWSI</description>
	
	<profiles>
		<profile>
			<id>owsi-core-release</id>
			<activation>
				<property>
					<name>distribution</name>
					<value>owsi-core-release</value>
				</property>
			</activation>
			<modules>
				<module>owsi-core-dependencies</module>
				<module>owsi-core-parents</module>
				<module>owsi-core-components</module>
				<module>owsi-core-packages</module>
			</modules>
		</profile>
		<profile>
			<id>all</id>
			<activation>
				<property>
					<name>!distribution</name>
				</property>
			</activation>
			<modules>
				<module>owsi-core-dependencies</module>
				<module>owsi-core-parents</module>
				<module>owsi-core-components</module>
				<module>owsi-core-examples</module>
				<module>owsi-core-packages</module>
			</modules>
		</profile>
		<profile>
			<id>cli</id>
			<build>
				<directory>${project.basedir}/target-cli</directory>
			</build>
		</profile>
	</profiles>
	
	<!-- Version du maven-release-plugin / ne pas supprimer -->
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>2.2.1</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
