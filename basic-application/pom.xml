<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>org.iglooproject.parents</groupId>
		<artifactId>igloo-parent-core-project</artifactId>
		<relativePath>../igloo/igloo-parents/igloo-parent-core-project/pom.xml</relativePath>
		<version>1.0-SNAPSHOT</version>
	</parent>
	
	<groupId>org.iglooproject.archetype</groupId>
	<artifactId>basic-application</artifactId>
	<packaging>pom</packaging>
	
	<name>${archetypeFullApplicationName}</name>
	
	<modules>
		<module>basic-application-core</module>
		<module>basic-application-init</module>
		<module>basic-application-webapp</module>
	</modules>
	
	<properties>
		<!-- il est préférable de bien surcharger la version du pool jdbc Tomcat au niveau du projet en fonction de la version de Tomcat -->
		<tomcat-jdbc.version>${igloo.tomcat-jdbc.version}</tomcat-jdbc.version>
	</properties>
	
	<profiles>
		<profile>
			<id>recette</id>
			<properties>
				<remote-deployment-url>scpexe://root@openwidesi-vm-recettejava.accelance.net/root/livraison/${maven.build.timestamp}</remote-deployment-url>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<properties>
				<remote-deployment-url>scpexe://openwide@todo/data/home/openwide/livraison/${maven.build.timestamp}</remote-deployment-url>
			</properties>
		</profile>
	</profiles>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.tomcat</groupId>
				<artifactId>tomcat-jdbc</artifactId>
				<version>${tomcat-jdbc.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<repositories>
		<repository>
			<id>nexus-igloo-releases</id>
			<name>Nexus Igloo Releases</name>
			<url>https://nexus.tools.kobalt-si.fr/repository/igloo-releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		
		<repository>
			<id>nexus-igloo-snapshots</id>
			<name>Nexus Igloo Snapshots</name>
			<url>https://nexus.tools.kobalt-si.fr/repository/igloo-snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		
		<repository>
			<id>nexus-kobalt-releases</id>
			<name>Nexus Kobalt Releases</name>
			<url>https://nexus.tools.kobalt-si.fr/repository/kobalt-releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		
		<repository>
			<id>nexus-kobalt-snapshots</id>
			<name>Nexus Kobalt Snapshots</name>
			<url>https://nexus.tools.kobalt-si.fr/repository/kobalt-snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	
	<issueManagement>
		<system>GitLab</system>
		<url>https://gitlab.tools.kobalt-si.fr/kobalt/${wombatProjectName}/issues</url>
	</issueManagement>

	<ciManagement>
		<system>GitLab</system>
		<url>https://gitlab.tools.kobalt-si.fr/kobalt/${wombatProjectName}/pipelines</url>
	</ciManagement>

	<scm>
		<developerConnection>scm:git:git@gitlab.tools.kobalt-si.fr:kobalt/${wombatProjectName}.git</developerConnection>
		<url>https://gitlab.tools.kobalt-si.fr/kobalt/${wombatProjectName}</url>
		<tag>HEAD</tag>
	</scm>
	
</project>
