<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>basic-application</artifactId>
		<groupId>org.iglooproject.archetype</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>basic-application-core</artifactId>
	
	<name>${archetypeFullApplicationName} - Core</name>
	
	<dependencies>
		
		<!-- Igloo -->
		<dependency>
			<groupId>org.iglooproject.packages</groupId>
			<artifactId>igloo-package-core-spring-jpa-app</artifactId>
			<version>${igloo.version}</version>
			<type>pom</type>
		</dependency>
		
		<!-- JDBC Driver -->
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
		</dependency>
		
		<!-- Pooling -->
		<dependency>
			<groupId>org.apache.tomcat</groupId>
			<artifactId>tomcat-jdbc</artifactId>
		</dependency>
		
		<!-- Test dependencies -->
		<dependency>
			<groupId>org.iglooproject.dependencies</groupId>
			<artifactId>igloo-dependency-test</artifactId>
			<type>pom</type>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<property>
					<!-- propriété présente en environnement m2eclipse -->
					<name>m2e.version</name>
				</property>
			</activation>
			<properties>
				<profile.filter.file>src/main/filters/development.properties</profile.filter.file>
			</properties>
		</profile>
		<profile>
			<id>test</id>
			<properties>
				<profile.filter.file>src/main/filters/test.properties</profile.filter.file>
			</properties>
		</profile>
		<profile>
			<id>travis</id>
			<properties>
				<profile.filter.file>src/main/filters/travis.properties</profile.filter.file>
			</properties>
		</profile>
		<profile>
			<id>recette</id>
			<properties>
				<profile.filter.file>src/main/filters/recette.properties</profile.filter.file>
			</properties>
		</profile>
		<profile>
			<id>preproduction</id>
			<properties>
				<profile.filter.file>src/main/filters/preproduction.properties</profile.filter.file>
			</properties>
		</profile>
		<profile>
			<id>production</id>
			<properties>
				<profile.filter.file>src/main/filters/production.properties</profile.filter.file>
			</properties>
		</profile>
	</profiles>
	
	<build>
		<filters>
			<filter>${profile.filter.file}</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.properties</include>
				</includes>
			</testResource>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.properties</exclude>
				</excludes>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>
