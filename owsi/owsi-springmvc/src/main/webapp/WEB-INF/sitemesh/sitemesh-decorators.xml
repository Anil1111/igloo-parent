<?xml version="1.0" encoding="UTF-8" ?>
<decorators defaultdir="/WEB-INF/sitemesh/decorators">
	
	<!--Un décorateur est défini par un nom, une page de 
		templating et le pattern des URL traitées par ce 
		décorateur.
	-->
	<decorator name="main" page="main.jsp">
		<pattern>/*</pattern>
	</decorator>

	<!--
		Il est possible d'exclure un certain nombre de pages 
		qui n'ont pas besoin d'être traitées par sitemesh.
	-->
	<excludes>
		<pattern>/springmvc/mycontroller/postentity</pattern>
	</excludes>
</decorators>