<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<groupId>fr.openwide.core.parents</groupId>
	<artifactId>owsi-core-parent-base</artifactId>
	<version>0.4-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<name>OWSI Core - Parent - Base</name>
	
	<properties>
		<jdk.version>1.6</jdk.version>
		
		<owsi-core.version>${project.version}</owsi-core.version>
		
		<owsi-core.spring.version>3.0.5.RELEASE</owsi-core.spring.version>
		<owsi-core.aspectj.version>1.6.8</owsi-core.aspectj.version>

		<owsi-core.hibernate-core.version>3.6.0.Final</owsi-core.hibernate-core.version>
		<owsi-core.c3p0.version>0.9.1.2</owsi-core.c3p0.version>
		<owsi-core.postgresql.version>9.0-801.jdbc3</owsi-core.postgresql.version>
		<owsi-core.hibernate-ehcache.version>${owsi-core.hibernate-core.version}</owsi-core.hibernate-ehcache.version>
		<owsi-core.ehcache.version>2.2.0</owsi-core.ehcache.version>
		
		<owsi-core.cglib.version>2.2</owsi-core.cglib.version>
		<owsi-core.javassist.version>3.8.0.GA</owsi-core.javassist.version>
		<owsi-core.asm.version>3.1</owsi-core.asm.version>
		
		<owsi-core.spring-security.version>3.0.5.RELEASE</owsi-core.spring-security.version>
		
		<owsi-core.spring-ldap.version>1.3.1.RELEASE</owsi-core.spring-ldap.version>
		
		<owsi-core.hibernate-search.version>3.2.1.Final</owsi-core.hibernate-search.version>
		<owsi-core.lucene.version>2.9.4</owsi-core.lucene.version>
		
		<owsi-core.quartz.version>1.8.4</owsi-core.quartz.version>

		<owsi-core.commons-io.version>2.0</owsi-core.commons-io.version>
		<owsi-core.commons-lang.version>2.5</owsi-core.commons-lang.version>
		<owsi-core.commons-logging.version>1.1.1</owsi-core.commons-logging.version>
		<owsi-core.commons-cli.version>1.2</owsi-core.commons-cli.version>
		<owsi-core.commons-codec.version>1.4</owsi-core.commons-codec.version>
		
		<owsi-core.jta.version>1.1</owsi-core.jta.version>
		<owsi-core.javax-mail.version>1.4.1</owsi-core.javax-mail.version>
		
		<owsi-core.slf4j.version>1.6.1</owsi-core.slf4j.version>
		<owsi-core.log4j.version>1.2.16</owsi-core.log4j.version>
		
		<owsi-core.opencsv.version>2.1</owsi-core.opencsv.version>
		<owsi-core.freemarker.version>2.3.16</owsi-core.freemarker.version>
		<owsi-core.dom4j.version>1.6.1</owsi-core.dom4j.version>
		<owsi-core.poi.version>3.6</owsi-core.poi.version>
		<owsi-core.itext.version>2.1.5</owsi-core.itext.version>
		<owsi-core.json-lib.version>2.3</owsi-core.json-lib.version>
		<owsi-core.truezip.version>6.8.1</owsi-core.truezip.version>
		
		<owsi-core.junit.version>4.8.2</owsi-core.junit.version>
		
		<owsi-core.jersey.version>1.0.3.1</owsi-core.jersey.version>
		<owsi-core.jstl.version>1.2</owsi-core.jstl.version>
		<owsi-core.jsp-api.version>2.0</owsi-core.jsp-api.version>
		<owsi-core.servlet-api.version>2.5</owsi-core.servlet-api.version>
		<owsi-core.sitemesh.version>2.4.2</owsi-core.sitemesh.version>
		<owsi-core.taglibs-standard.version>1.1.2</owsi-core.taglibs-standard.version>
		<owsi-core.javax-validation-api.version>1.0.0.GA</owsi-core.javax-validation-api.version>
		
		<owsi-core.maven-surefire-plugin.version>2.6</owsi-core.maven-surefire-plugin.version>
		<owsi-core.maven-install-plugin.version>2.3.1</owsi-core.maven-install-plugin.version>
		<owsi-core.maven-release-plugin.version>2.1</owsi-core.maven-release-plugin.version>
		<owsi-core.maven-war-plugin.version>2.1.1</owsi-core.maven-war-plugin.version>
		<owsi-core.maven-assembly-plugin.version>2.2</owsi-core.maven-assembly-plugin.version>
	</properties>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-install-plugin</artifactId>
					<version>${owsi-core.maven-install-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>${owsi-core.maven-release-plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<repositories>
		<repository>
			<id>jboss</id>
			<name>JBoss Maven Repository</name>
			<url>https://repository.jboss.org/nexus/content/groups/public/</url>
		</repository>
	</repositories>
	
	<!-- Project information -->

	<organization>
		<name>Open Wide</name>
		<url>http://www.openwide.fr/</url>
	</organization>

	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<developers>
		<developer>
			<id>gsmet</id>
			<name>Guillaume Smet</name>
			<email>guillaume.smet@openwide.fr</email>
			<organization>Open Wide</organization>
		</developer>
		<developer>
			<id>lalmeras</id>
			<name>Laurent Almeras</name>
			<email>laurent.almeras@openwide.fr</email>
			<organization>Open Wide</organization>
		</developer>
		<developer>
			<id>jgonzalez</id>
			<name>Julien Gonzalez</name>
			<email>julien.gonzalez@openwide.fr</email>
			<organization>Open Wide</organization>
		</developer>
	</developers>
	
	<profiles>
		<profile>
			<activation>
				<property>
					<name>distribution</name>
					<value>owsi-core-release</value>
				</property>
			</activation>
			<distributionManagement>
				<repository>
					<id>nexus-owsi-core</id>
					<name>Nexus OWSI Core</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
				</repository>
				<snapshotRepository>
					<id>nexus-owsi-core-snapshots</id>
					<name>Nexus OWSI Core Snapshots</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>
	
</project>