<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>owsi-example</artifactId>
		<groupId>fr.openwide.owsi</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<groupId>fr.openwide.owsi</groupId>
	<artifactId>owsi-example-springmvc</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>OWSI Core Example - Spring MVC</name>
	<description>Capitalisation OWSI pour la technologie Spring MVC</description>
	
	<dependencies>
		<!-- Spring MVC -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>${owsi.spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>${owsi.spring.version}</version>
		</dependency>

		<!-- OSWI-Core -->
		<dependency>
			<groupId>fr.openwide.core</groupId>
			<artifactId>owsi-core-spring</artifactId>
			<version>${owsi.core.version}</version>
		</dependency>
		
		<dependency>
			<groupId>fr.openwide.core</groupId>
			<artifactId>owsi-core-commons</artifactId>
			<version>${owsi.core.version}</version>
		</dependency>
		
		<!-- Logging -->
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${owsi.log4j.version}</version>
		</dependency>
		
		<!-- Miscellaneous -->
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>${owsi.commons-logging.version}</version>
		</dependency>
		
		<dependency>
			<groupId>opensymphony</groupId>
			<artifactId>sitemesh</artifactId>
			<version>${owsi.sitemesh.version}</version>
		</dependency>
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>${owsi.servlet.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
		
		<dependency>
			<groupId>javax.validation</groupId>
			<artifactId>validation-api</artifactId>
			<version>${owsi.validation.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>${owsi.jstl.version}</version>
		</dependency>
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jsp-api</artifactId>
			<version>${owsi.jsp.version}</version>
			<type>jar</type>
			<scope>provided</scope>
		</dependency>
	</dependencies>
</project>
